{
  "expo": {
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/notification.png",
          "color": "#6C5CE7"
        }
      ]
    ],
    "android": {
      "useNextNotificationsApi": true,
      "permissions": ["RECORD_AUDIO", "FOREGROUND_SERVICE"]
    },
    "ios": {
      "supportsBackgroundAudio": true,
      "requireFullScreen": false
    }
  }
}
